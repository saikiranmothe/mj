<h2>Sign up </h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
    <div class="span4">
        <div>   
          <label class="control-label" placeholder=" Lastname / Surname: ">Lastname / Surname: </label>    
          <%= f.text_field :Surname %>
        </div>  

        <div><label class="control-label">First  Name:</label>
      	<%= f.text_field :first_name %>
        </div>  

        <div><label class="control-label">Middle  Name:</label>
      	<%= f.text_field :middle_name%>
       </div>  


        <div><label class="control-label">House Number:</label>
      	<%= f.text_field :h_no %>
         </div>  

        <div><label class="control-label">Building / Street:</label>
      		<%= f.text_field :street %>
       </div>  
            <div><label class="control-label">Locality / Area:</label>
            <%= f.text_field :area %>
         </div>  


       
  </div>
      
           <div class="span6">

          <div><label class="control-label">Pin Code</label>
            <%= f.text_field :pin_no %>
         </div>  

             <div><label class="control-label">Contact Number</label>
            <%= f.text_field :contact_no %>
         </div>  

          <div><label class="control-label">Tan Number</label>
            <%= f.text_field :tan_no %>
         </div>  
  <hr>

        

          <div><%= f.label :email %>
          <%= f.email_field :email, :autofocus => true %></div>

          <div><%= f.label :password %>
          <%= f.password_field :password %></div>

          <div><%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %></div>
     </div>


</div>

  <div><%= f.submit "Sign up" %></div>
<% end %>


<%= render "devise/shared/links" %>
